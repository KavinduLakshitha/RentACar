<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/car_item_background"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Car Image -->
    <ImageView
        android:id="@+id/carImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/image_background"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/car_image" />

    <!-- Car Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!-- Car Name and Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/carName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/toyota_camry"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/carType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sedan"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/type_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

        </LinearLayout>

        <!-- Transmission and Seating -->
        <TextView
            android:id="@+id/transmissionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/automatic_petrol"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/seatingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_5_seats"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <!-- Features -->
        <TextView
            android:id="@+id/carFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gps_bluetooth_ac"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="8dp" />

        <!-- Price Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/carPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_45_day"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to book â†’"
                android:textSize="12sp"
                android:textColor="#1976D2"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>