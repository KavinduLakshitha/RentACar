<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:id="@+id/mainScrollView"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Credit Balance -->
        <LinearLayout
            android:id="@+id/mainHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="48dp"
            android:paddingBottom="16dp"
            android:fitsSystemWindows="true"
            android:elevation="3dp">

            <TextView
                android:id="@+id/appTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/rent_a_car"
                android:textColor="#333333"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Credit Balance Display -->
            <LinearLayout
                android:id="@+id/creditBalanceCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#F5F5F5"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Balance: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/creditBalanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" credits"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />

            </LinearLayout>

        </LinearLayout>

        <!-- Search, Sort and Dark Mode Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Search by name or model"
                android:importantForAutofill="no"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@drawable/search_background"
                android:textSize="16sp"
                android:inputType="text"
                android:maxLines="1" />

            <Button
                android:id="@+id/sortButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Sort"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_outline" />

            <Switch
                android:id="@+id/darkModeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:text="Dark"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Favorites Section -->
        <LinearLayout
            android:id="@+id/favoritesSection"
            style="@style/CardContainer"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                style="@style/SectionHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="★ Favorite Cars"
                android:textColor="#E91E63"
                android:layout_marginBottom="4dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="80dp"
                android:scrollbars="vertical"
                android:fadeScrollbars="false">

                <TextView
                    android:id="@+id/favoritesListText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No favorites yet"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="2dp" />

            </ScrollView>

        </LinearLayout>

        <!-- Current Car Display -->
        <LinearLayout
            android:id="@+id/carDisplayCard"
            style="@style/CardContainer"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="1dp">

            <TextView
                android:id="@+id/carCounterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car 1 of 5"
                android:textSize="16sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Car Image -->
            <ImageView
                android:id="@+id/carImageView"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="Car Image"
                android:layout_marginBottom="8dp" />

            <!-- Favorite Button -->
            <Button
                android:id="@+id/favoriteButton"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="☆ Add to Favorites"
                android:textSize="14sp"
                android:background="@drawable/button_outline"
                android:layout_marginBottom="8dp" />

            <!-- Car Details -->
            <TextView
                android:id="@+id/carNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toyota Camry"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    style="@style/CarDetailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model: " />

                <TextView
                    android:id="@+id/carModelText"
                    style="@style/CarDetailValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    style="@style/CarDetailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year: " />

                <TextView
                    android:id="@+id/carYearText"
                    style="@style/CarDetailValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <RatingBar
                    android:id="@+id/carRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    style="?android:attr/ratingBarStyleSmall"
                    android:scaleX="1.2"
                    android:scaleY="1.2" />

                <TextView
                    android:id="@+id/carRatingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(4.5)"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilometres: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/carKilometresText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25,000 km"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/price_background"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Cost: "
                    android:textSize="18sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/carCostText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 credits/day"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />

            </LinearLayout>

            <!-- Rent Button -->
            <Button
                android:id="@+id/rentButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Rent This Car"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_primary"
                android:elevation="4dp"
                android:layout_marginBottom="8dp" />

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/previousButton"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:text="← Previous"
                    android:textSize="15sp"
                    android:background="@drawable/button_outline"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:text="Next →"
                    android:textSize="15sp"
                    android:background="@drawable/button_outline"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>