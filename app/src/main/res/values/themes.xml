<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RentACar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Or use Theme.AppCompat.Light.NoActionBar if you don't want action bar -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.RentACar" parent="Base.Theme.RentACar" />

    <!-- Reusable Styles - Used in multiple locations -->
    
    <!-- Style 1: Section Header Text - Used in MainActivity and BookingActivity -->
    <style name="SectionHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Style 2: Card Container - Used in MainActivity and BookingActivity -->
    <style name="CardContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Style 3: Car Detail Label Text - Used in MainActivity and BookingActivity -->
    <style name="CarDetailLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- Style 4: Car Detail Value Text - Used in MainActivity and BookingActivity -->
    <style name="CarDetailValue">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- Style 5: Primary Button Style - Used in multiple buttons -->
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Style 6: Input Field Style - Used in BookingActivity -->
    <style name="InputFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Dark Mode Styles -->
    <style name="SectionHeaderText.Dark">
        <item name="android:textColor">#E0E0E0</item>
    </style>

    <style name="CardContainer.Dark">
        <item name="android:background">#1E1E1E</item>
    </style>

    <style name="CarDetailLabel.Dark">
        <item name="android:textColor">#B0B0B0</item>
    </style>

    <style name="CarDetailValue.Dark">
        <item name="android:textColor">#E0E0E0</item>
    </style>
</resources>